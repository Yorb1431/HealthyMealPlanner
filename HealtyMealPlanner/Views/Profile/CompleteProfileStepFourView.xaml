<Window x:Class="HealthyMealPlanner.Views.Profile.CompleteProfileStepFourView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Complete Profile - Step Four"
        Height="600" Width="400"
        WindowStartupLocation="CenterScreen"
        AllowsTransparency="True"
        WindowStyle="None">
    <Window.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
            <GradientStop Color="#F0FDF4" Offset="0"/>
            <GradientStop Color="#FFFFFF" Offset="0.5"/>
            <GradientStop Color="#DCFCE7" Offset="1"/>
        </LinearGradientBrush>
    </Window.Background>
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0,32,0,0">
            <TextBlock Text="You are all set up!" FontSize="32" FontWeight="Bold" Foreground="#15803D" TextAlignment="Center" Margin="0,0,0,24"/>
            <UniformGrid Rows="3" Columns="3" Margin="0,0,0,0" Width="320" Height="240">
                <Image Source="pack://application:,,,/Assets/Dish1.jpg" Stretch="UniformToFill" Margin="6" Height="80" Width="80" ClipToBounds="True"/>
                <Image Source="pack://application:,,,/Assets/Dish2.jpg" Stretch="UniformToFill" Margin="6" Height="80" Width="80" ClipToBounds="True"/>
                <Image Source="pack://application:,,,/Assets/Dish3.jpg" Stretch="UniformToFill" Margin="6" Height="80" Width="80" ClipToBounds="True"/>
                <Image Source="pack://application:,,,/Assets/Dish4.jpg" Stretch="UniformToFill" Margin="6" Height="80" Width="80" ClipToBounds="True"/>
                <Image Source="pack://application:,,,/Assets/Dish5.jpg" Stretch="UniformToFill" Margin="6" Height="80" Width="80" ClipToBounds="True"/>
                <Image Source="pack://application:,,,/Assets/Dish6.jpg" Stretch="UniformToFill" Margin="6" Height="80" Width="80" ClipToBounds="True"/>
                <Image Source="pack://application:,,,/Assets/Dish7.jpg" Stretch="UniformToFill" Margin="6" Height="80" Width="80" ClipToBounds="True"/>
                <Image Source="pack://application:,,,/Assets/Dish9.jpg" Stretch="UniformToFill" Margin="6" Height="80" Width="80" ClipToBounds="True"/>
                <Image Source="pack://application:,,,/Assets/Dish10.jpg" Stretch="UniformToFill" Margin="6" Height="80" Width="80" ClipToBounds="True"/>
            </UniformGrid>
            <TextBlock TextWrapping="Wrap" TextAlignment="Center" Foreground="#374151" FontSize="15" Margin="0,24,0,0" Width="320">
                Explore our <Run Foreground="#15803D" FontWeight="SemiBold">delicious recipes</Run> and create <Run Foreground="#15803D" FontWeight="SemiBold">personalised meal plans</Run> made just for you.
            </TextBlock>
            <Border CornerRadius="14" Margin="0,32,0,0" Width="220">
                <Button x:Name="BeginButton" Content="LET'S BEGIN" Click="BeginButton_Click" Height="44" FontSize="16" FontWeight="Bold" Background="#15803D" Foreground="White" BorderThickness="0" Width="220"/>
            </Border>
        </StackPanel>
    </ScrollViewer>
</Window> 