<Window x:Class="HealthyMealPlanner.Views.ResetPasswordRequestWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Reset Password" Height="300" Width="500"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        AllowsTransparency="True">
    <Window.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
            <GradientStop Color="#F0FDF4" Offset="0"/>
            <GradientStop Color="#FFFFFF" Offset="0.5"/>
            <GradientStop Color="#DCFCE7" Offset="1"/>
        </LinearGradientBrush>
    </Window.Background>
    <Grid Margin="24">
        <StackPanel>
            <TextBlock Text="Reset your password" FontSize="28" FontWeight="Bold" Foreground="#166534" Margin="0,0,0,24"/>
            <TextBlock Text="Enter your email or username" FontSize="14" Foreground="#374151" Margin="0,0,0,4"/>
            <TextBox x:Name="EmailTextBox" Height="38" FontSize="15" Background="#F0FDF4" BorderBrush="#15803D" BorderThickness="1" Margin="0,0,0,20"/>
            <Border CornerRadius="14" Background="#15803D">
                <Button Content="Send Reset Code" Click="SendCode_Click" Height="44" FontSize="16" FontWeight="Bold" Background="Transparent" Foreground="White" BorderThickness="0"/>
            </Border>
        </StackPanel>
    </Grid>
</Window>