<Window x:Class="HealthyMealPlanner.Views.SetNewPasswordWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Set New Password" Height="350" Width="500"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        AllowsTransparency="True">
    <Window.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
            <GradientStop Color="#F0FDF4" Offset="0"/>
            <GradientStop Color="#FFFFFF" Offset="0.5"/>
            <GradientStop Color="#DCFCE7" Offset="1"/>
        </LinearGradientBrush>
    </Window.Background>
    <Grid Margin="24">
        <StackPanel>
            <TextBlock Text="Set a new password" FontSize="28" FontWeight="Bold" Foreground="#166534" Margin="0,0,0,24"/>
            <TextBlock Text="New password" FontSize="14" Foreground="#374151"/>
            <PasswordBox x:Name="NewPasswordBox" Height="38" Margin="0,0,0,16" Background="#F0FDF4" BorderBrush="#15803D" BorderThickness="1"/>
            <TextBlock Text="Confirm password" FontSize="14" Foreground="#374151"/>
            <PasswordBox x:Name="ConfirmPasswordBox" Height="38" Margin="0,0,0,24" Background="#F0FDF4" BorderBrush="#15803D" BorderThickness="1"/>
            <Border CornerRadius="14" Background="#15803D">
                <Button Content="Update Password" Click="UpdatePassword_Click" Height="44" FontSize="16" FontWeight="Bold" Background="Transparent" Foreground="White" BorderThickness="0"/>
            </Border>
        </StackPanel>
    </Grid>
</Window>